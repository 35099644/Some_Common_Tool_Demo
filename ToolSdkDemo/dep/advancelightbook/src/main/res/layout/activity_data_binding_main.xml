<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
      <data>
          <import type="com.lmhu.advancelight.book.chapter10.databinding.model.Swordsman"/>
          <variable
              name="swordsman"
              type="Swordsman" />
      </data>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{swordsman.name}"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{swordsman.level}"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_layout"
            android:layout_gravity="center_horizontal"
            android:text="布局属性"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_update"
            android:layout_gravity="center_horizontal"
            android:text="动态更新"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_recycler"
            android:layout_gravity="center_horizontal"
            android:text="结合RecyclerView"
            />
    </LinearLayout>
</layout>


